<div class="contents_show">
    <h1 class="toukou"><%= @nickname %>さんの投稿一覧</h1>
    



    <div class="contents_row">
    <% @tweet.each do |tweet| %>
        <div class="contents_post" style="background-image: url(<%= tweet.image %>); background-size: cover;height: 300px;">
            
        <div class="list">
            <ul class="more_list">
                <li>
                    <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get,class:"btn-square" %>
                </li>
                <li>
                    <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete,class:"btn-square"%>
                </li>
            </ul>
            
            <div class="show-text">
            <%= simple_format(tweet.text) %>
            </div>
    </div>
    </div>
    <% end %>
    
    </div>
    
 <div class="page">
<%= paginate(@tweet) %>
    </div>