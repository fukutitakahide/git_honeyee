<!DOCTYPE html>
<html>
  <head>
    <title>Honeyee</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      
      <div class="top">
       <h1 class="title"><%=link_to "Honeyee","/tweets" %></h1>
      
       <%  if user_signed_in? %>
      <div class="nav">
        
      <ul class="user_info">
        <li class="current"><a href="/users/<%= current_user.id %>">マイページ</a></li>
        <li><%= link_to "ログアウト", destroy_user_session_path,method: :delete,class: 'post' %></li>
        <li><a href="/tweets/new">新規投稿</a></li>
      </ul>
      </div>
      <% else %>
      <div class="nav">
      
      <ul>
        <li><%= link_to "ログイン", new_user_session_path, class: 'post' %></li>
        <li><%= link_to "新規登録", new_user_registration_path, class: 'post' %></li>
      </ul>
      </div>
      </div>
      <% end  %>
      </div>
      
     
      </header>
      
    <%= yield %>
    
  </body>
</html>